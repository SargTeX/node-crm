include ./header.jade
h1 Benutzergruppen (#{data.usergroups.length})

div.button
	a(href="/UsergroupAdd?sessionId=#{data.sessionId}") Neue Gruppe erstellen

table
	thead
		tr
			th(colspan="1") Name
			th Standard
			th(colspan="3") Aktionen
	tbody
		each usergroup in data.usergroups
			tr
				td #{usergroup.name}
				td
					if !usergroup.default
						.button
							a.innerButton(href="/UsergroupDefault?sessionId=#{data.sessionId}&usergroupId=#{usergroup._id}") Als Standard setzen
					else
						span X
				td
					.button
						a.innerButton(href="/PermissionList?sessionId=#{data.sessionId}&usergroupId=#{usergroup._id}") Berechtigungen
				td
					.button
						a.innerButton(href="/UsergroupEdit?sessionId=#{data.sessionId}&usergroupId=#{usergroup._id}") Bearbeiten
				td
					.button
						a.innerButton(href="/UsergroupDelete?sessionId=#{data.sessionId}&usergroupId=#{usergroup._id}") LÃ¶schen