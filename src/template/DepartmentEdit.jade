include ./header.jade
include ./errors.jade
if status == 'success'
	p.success Abteilung wurde erfolgreich bearbeitet
h1 Abteilung bearbeiten
form(method="POST" action="/DepartmentEdit?sessionId=#{data.sessionId}")
	div.field
		label Name
		input(type="text" name="name" value="#{data.department.name}" required="required")
	div.field
		label Mailbox-Adresse
		input(type="email" name="email" value="#{data.department.email}" required="required")
	input(type="hidden" name="departmentId" value="#{data.department._id}")
	input(type="submit" value="Speichern")