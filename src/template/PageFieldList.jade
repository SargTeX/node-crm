include ./header.jade

h1 Page #{data.page.name} Felder

include ./errors.jade

if status == 'success'
	p.success Die Page wurde erfolgreich aktualisiert

table
	tr
		th Feldlabel
		th Feldtyp
		th Auswahlliste
		th Editieren
		th Aktiv
	each field in data.page.fields
		tr
			td #{field.label}
			td #{field.type}
			td
				if field.type == 'SELECT' || field.type == 'SELECTMULTI'
					select
						each selectable in field.selectables
							option #{selectable}
			td
				a(href="/PageFieldEdit?sessionId=#{sessionId}&fieldId=#{field._id}") Editieren
			td
				input(type="radio" checked="#{field.active}" readonly)
	button(onclick="location.href='/PageFieldAdd?sessionId=#{sessionId}&pageId=#{data.page._id}'") Feld hinzuf√ºgen


