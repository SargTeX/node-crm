include ./header.jade

h1 Alle Change Requests (#{data.requests.length})

table
	thead
		tr
			th #
			th Titel
			th Mandant
			th(colspan="3") Aktionen
	tbody
		each request in data.requests
			tr
				td #{request.number}
				td #{request.title}
				td #{request.customer.name}
				td
					a(href="/ChangeRequestView?sessionId=#{data.sessionId}&requestId=#{request._id}") Ansehen
				td
					a(href="/ChangeRequestEdit?sessionId=#{data.sessionId}&requestId=#{request._id}") Bearbeiten
